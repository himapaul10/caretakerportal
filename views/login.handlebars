<html lang='en'>

<head>
    <meta charset='UTF-8'/>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'/>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css'/>
    <link rel="stylesheet" href="styles/style.css">
    <title>Login | CareTakerPortal</title>
</head>

<body>
<nav>
    <h4>Caretaker Portal</h4>
    <ul>
        <li><a href='/'>Home</a></li>
        <li><a href='/login'>Login</a></li>
        <li><a href='/register'>Register</a></li>
    </ul>
</nav>
<div class='container mt-4'>
    <div class='container mt-4'>
        {{#if message}}
            <p class='alert alert-danger my-4'>{{message}}</p>
        {{/if}}
        <div class='card'>
            <div class='card-header'>
                Login Form
            </div>
            <div class='container'>
                <div class='card-body'>
                    <form action='/login' method='post'>
                        <div class='form-group mb-4'>
                            <label for='name'>Email Address</label>
                            <input type='text' class='form-control' id='email' value="susan@gmail.com" name='email' />
                        </div>
                        <div class='form-group mb-4'>
                            <label for='password'>Password</label>
                            <input type='password' class='form-control' id='password' value="susan123" name='password' />
                        </div>
                        <button type='submit' class='btn btn-primary mt-1'>Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

</html>